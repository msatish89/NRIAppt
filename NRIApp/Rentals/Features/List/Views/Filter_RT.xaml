                                        <local:ListviewScrollbar x:Name="Noofbathdata" HeightRequest="247"  HasUnevenRows="True"  SeparatorVisibility="None" ItemTapped="Bathtypedata_ItemTapped" >
                                            <local:ListviewScrollbar.ItemTemplate>
                                                <DataTemplate>
                                                    <ViewCell>
                                                        <Frame Margin="0" Padding="0" HasShadow="False">
                                                            <StackLayout  HorizontalOptions="FillAndExpand" VerticalOptions="Start" BackgroundColor="White" Margin="0,0,0,2" >
                                                                <StackLayout Orientation="Horizontal" HorizontalOptions="FillAndExpand" VerticalOptions="CenterAndExpand" Padding="2,8,2,8"  >
                                                                    <Image Source="{Binding image}" HeightRequest="25"  WidthRequest="25"  VerticalOptions="CenterAndExpand" HorizontalOptions="Start" Margin="10,0,10,0"   />
                                                                    <Label Text="{Binding oderbylist}" Style="{StaticResource FontRegular}" FontSize="14" VerticalOptions="CenterAndExpand" HorizontalOptions="StartAndExpand"  />
                                                                </StackLayout>

                                                                <BoxView HeightRequest="1" BackgroundColor="#e0e0e0" VerticalOptions="StartAndExpand" HorizontalOptions="FillAndExpand"/>

                                                            </StackLayout>
                                                        </Frame>
                                                    </ViewCell>
                                                </DataTemplate>
                                            </local:ListviewScrollbar.ItemTemplate>
                                        </local:ListviewScrollbar>
                                    </StackLayout>

                                </StackLayout>
                            </Frame>
                        </StackLayout>
                        <StackLayout VerticalOptions="Start" HorizontalOptions="FillAndExpand" >
                            <Frame BackgroundColor="White" CornerRadius="0" Padding="0" >

                                <StackLayout  HorizontalOptions="FillAndExpand" VerticalOptions="Start">
                                    <StackLayout Orientation="Horizontal" HorizontalOptions="FillAndExpand" Padding="15,10,15,10" Margin="0" >
                                        <Label Text="Amenities" FontSize="16" TextColor="Black" Style="{StaticResource FontRegular}" VerticalOptions="CenterAndExpand" HorizontalOptions="StartAndExpand" />
                                        <Image x:Name="amenitiesimg" HeightRequest="24"  WidthRequest="24"  VerticalOptions="End" HorizontalOptions="End" />
                                        <StackLayout.GestureRecognizers>
                                            <TapGestureRecognizer Tapped="amenities_Tapcmd"/>
                                        </StackLayout.GestureRecognizers>
                                    </StackLayout>

                                    <BoxView HeightRequest="1" BackgroundColor="#ecf2f4" VerticalOptions="Start" HorizontalOptions="FillAndExpand" Margin="0" />

                                    <StackLayout HorizontalOptions="FillAndExpand" x:Name="Amenitieslayout" VerticalOptions="Start" Padding="15,10,15,15" IsVisible="{Binding Amenitieslist}">

                                    </StackLayout>

                                </StackLayout>
                            </Frame>
                        </StackLayout>
                        <StackLayout VerticalOptions="Start" HorizontalOptions="FillAndExpand" >
                            <Frame BackgroundColor="White" CornerRadius="0" Padding="0" >

                                <StackLayout  HorizontalOptions="FillAndExpand" VerticalOptions="Start">
                                    <StackLayout Orientation="Horizontal" HorizontalOptions="FillAndExpand" Padding="15,10,15,10" Margin="0" >
                                        <Label Text="Accomodates" FontSize="16" Style="{StaticResource FontRegular}" TextColor="Black" VerticalOptions="CenterAndExpand" HorizontalOptions="StartAndExpand" />
                                        <Image x:Name="accomodateimg" HeightRequest="24"  WidthRequest="24"  VerticalOptions="End" HorizontalOptions="End" />
                                        <StackLayout.GestureRecognizers>
                                            <TapGestureRecognizer Tapped="accomodate_Tapcmd"/>
                                        </StackLayout.GestureRecognizers>
                                    </StackLayout>

                                    <BoxView HeightRequest="1" BackgroundColor="#ecf2f4" VerticalOptions="Start" HorizontalOptions="FillAndExpand" Margin="0" />

                                    <StackLayout HorizontalOptions="FillAndExpand" x:Name="Accomodatelayout" VerticalOptions="Start" Padding="15,10,15,15" IsVisible="{Binding Amenitieslist}">

                                        <SUL:CustomEntry x:Name="accomodatenum" Style="{StaticResource FontRegularEntry}" Placeholder="Total members (1-20)" TextChanged="Accomodatenum_TextChanged" VerticalOptions="CenterAndExpand" Keyboard="Numeric" HideBorder="True" ReturnKeyType="Done" HorizontalOptions="FillAndExpand"  PlaceholderColor="#c0c0c0" >
                                            <SUL:CustomEntry.Behaviors>
                                                <BH:NumericInputValidator/>
                                                <BH:MaxLengthValidator MaxLength="2"/>
                                            </SUL:CustomEntry.Behaviors>
                                        </SUL:CustomEntry>
                                        <BoxView HeightRequest="1" BackgroundColor="#ecf2f4" VerticalOptions="Start" HorizontalOptions="FillAndExpand" Margin="0" />
                                    </StackLayout>

                                </StackLayout>
                            </Frame>
                        </StackLayout>
                        <StackLayout VerticalOptions="Start" HorizontalOptions="FillAndExpand" >
                            <Frame BackgroundColor="White" CornerRadius="0" Padding="0"  >

                                <StackLayout  HorizontalOptions="FillAndExpand" VerticalOptions="Start">
                                    <StackLayout Orientation="Horizontal" HorizontalOptions="FillAndExpand" Padding="15,10,15,10" >
                                        <Label Text="Distance" Style="{StaticResource FontRegular}" FontSize="16" TextColor="Black" VerticalOptions="CenterAndExpand" HorizontalOptions="StartAndExpand" />
                                        <Image x:Name="distanceimg"  HeightRequest="24"  WidthRequest="24"  VerticalOptions="End" HorizontalOptions="End" />

                                        <StackLayout.GestureRecognizers>
                                            <TapGestureRecognizer Tapped="distance_Tapcmd" />
                                        </StackLayout.GestureRecognizers>
                                    </StackLayout>
                                    <BoxView HeightRequest="1" BackgroundColor="#ecf2f4" VerticalOptions="Start" HorizontalOptions="FillAndExpand" Margin="0" />
                                    <StackLayout x:Name="layoutdistance" HorizontalOptions="FillAndExpand" VerticalOptions="Start" Padding="15,10,15,15" >
                                        <!--<Label Text="Distance" Style="{StaticResource FontRegular}" TextColor="Gray" FontSize="14" VerticalOptions="CenterAndExpand" HorizontalOptions="Start"   />-->
                                        <cntrl:RangeSlider x:Name="distancerange" LowerValue="0" UpperValue="75"  ShowTextAboveThumbs="True" MinimumValue="0" MaximumValue="75" />
                                    </StackLayout>

                                </StackLayout>
                            </Frame>
                        </StackLayout>

                    </StackLayout>

                </StackLayout>

            </ScrollView>



            <AbsoluteLayout VerticalOptions="EndAndExpand" >
                <StackLayout  HorizontalOptions="FillAndExpand" AbsoluteLayout.LayoutBounds="0, 1, 1, 50" AbsoluteLayout.LayoutFlags="PositionProportional, WidthProportional" >

                    <Button Text="Apply" Clicked="ApplyFiltercmd" Command="{Binding ApplyFiltercmd}" TextColor="White" BackgroundColor="#e30045" AbsoluteLayout.LayoutBounds="0, 1, 1, 50" AbsoluteLayout.LayoutFlags="PositionProportional, WidthProportional" >
                        <Button.Margin>
                            <OnPlatform x:TypeArguments="Thickness" iOS="15,0,15,20" Android="0"></OnPlatform>
                        </Button.Margin>
                    </Button>
                </StackLayout>
            </AbsoluteLayout>

        </StackLayout>
    </ContentPage.Content>
</ContentPage>