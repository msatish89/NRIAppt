                                        <Label Text="{Binding jobstatus}" FontSize="12"   Style="{StaticResource FontRegular}"   VerticalOptions="Start" HorizontalOptions="FillAndExpand" TextColor="#212121" />
                                    </StackLayout>

                                </StackLayout>

                            </StackLayout>

