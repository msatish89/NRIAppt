                                                                            <Label Text="{Binding jobcompany}" FontSize="12"   Style="{StaticResource FontRegular}"  VerticalOptions="Center" HorizontalOptions="Start" HorizontalTextAlignment="End" TextColor="#878787" />
                                                                        </StackLayout>
                                                                        <Label Text="{Binding designation}" FontSize="14"   Style="{StaticResource FontRegular}"   VerticalOptions="Center" HorizontalOptions="FillAndExpand" TextColor="#212121"  />
                                                                        <Label Text="{Binding description}" FontSize="12"   Style="{StaticResource FontRegular}"  VerticalOptions="Start" HorizontalOptions="FillAndExpand"  TextColor="#878787" />
