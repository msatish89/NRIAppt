                                                <Image Source="FilterTick.png" IsVisible="{Binding topbanneraddimgvisible}"  HeightRequest="14" WidthRequest="14" VerticalOptions="Center" HorizontalOptions="Start" Margin="0,0,5,0" />
                                            </StackLayout>
                                            <Label Text="View sample " FontSize="14" Style="{StaticResource FontRegular}"  HorizontalOptions="Start" VerticalOptions="Center" TextColor="#2e74f0" >
