                                        </StackLayout>
                                    </StackLayout>

                                </StackLayout>

                            </Frame>

                            <Frame CornerRadius="4" BackgroundColor="White" VerticalOptions="Start" HorizontalOptions="FillAndExpand" Padding="0">
