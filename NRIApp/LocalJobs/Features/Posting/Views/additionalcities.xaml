                    <StackLayout>
                        <StackLayout IsVisible="{Binding dayscountlistsvisible}">
                            <H:ListviewScrollbar x:Name="perdaycostlist" HeightRequest="200" HasUnevenRows="True" SeparatorVisibility="None" ItemsSource="{Binding bonusdaycntlist}" >
                                <H:ListviewScrollbar.ItemTemplate>
                                    <DataTemplate>
