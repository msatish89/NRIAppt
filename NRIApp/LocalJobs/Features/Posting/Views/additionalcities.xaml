                            </StackLayout>

                            <StackLayout Orientation="Horizontal" VerticalOptions="Start" HorizontalOptions="FillAndExpand" Margin="0,0,0,5">
                                <Image Source="CheckedGreen.png" HeightRequest="18" WidthRequest="18" VerticalOptions="Start" HorizontalOptions="Start" Margin="0,3,5,0"  />
                                <Label Text="Once approved, the banner will be hosted in home page" FontSize="13" Style="{StaticResource FontRegular}"  HorizontalOptions="StartAndExpand" VerticalOptions="Start" TextColor="#666666"   />
                            </StackLayout>

