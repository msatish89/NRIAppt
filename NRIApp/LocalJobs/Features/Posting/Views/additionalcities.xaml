                                <Label Text=" Based on job reports and demand, mailers will be sent with high importance." FontSize="13" Style="{StaticResource FontRegular}"  HorizontalOptions="StartAndExpand" VerticalOptions="Start" TextColor="#666666"   />
                            </StackLayout>
