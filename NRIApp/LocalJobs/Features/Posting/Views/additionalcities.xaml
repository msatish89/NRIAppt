                                        <Label Text="Yes" TextColor="#212121" FontSize="14" VerticalOptions="CenterAndExpand" HorizontalOptions="Start"   />
                                        <StackLayout.GestureRecognizers>
                                            <TapGestureRecognizer Command="{Binding TapAddbanner}"></TapGestureRecognizer>
                                        </StackLayout.GestureRecognizers>
