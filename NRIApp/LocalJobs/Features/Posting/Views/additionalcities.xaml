                                                </Grid>
                                                <Label  Text="$" FontSize="16" Style="{StaticResource FontRegular}"  HorizontalOptions="Start" VerticalOptions="Center" TextColor="#08a182"   />
                                                <Label Text="{Binding jobslotamnt}" FontSize="16"  Style="{StaticResource FontRegular}"  HorizontalOptions="Start" VerticalOptions="Center" TextColor="#08a182" Margin="-5,0,0,0"  />
                                            </StackLayout>
                                            <Button x:Name="jobslotbtn" Text="{Binding jobslotbtntxt}" Command="{Binding jobslotcmd }" FontSize="14"  Style="{StaticResource FontRegular}"  VerticalOptions="Start" HorizontalOptions="Start" BackgroundColor="#51a351" TextColor="White" />
                                        </StackLayout>
                                    </StackLayout>
                                </StackLayout>
                            </Frame>

                            <Frame CornerRadius="4" BackgroundColor="White" VerticalOptions="Start" HorizontalOptions="FillAndExpand" Padding="0">
                                <StackLayout  VerticalOptions="Start" HorizontalOptions="FillAndExpand" Padding="15">

                                    <StackLayout Orientation="Horizontal" VerticalOptions="Start" HorizontalOptions="FillAndExpand">
                                        <StackLayout  VerticalOptions="Start" HorizontalOptions="FillAndExpand">
                                            <StackLayout Orientation="Horizontal" VerticalOptions="Start" HorizontalOptions="FillAndExpand">
                                                <Label Text="Bonus Days " FontSize="16" Style="{StaticResource FontRegular}"  HorizontalOptions="Start" VerticalOptions="Center" TextColor="#212121"   />
                                                <Image Source="FilterTick.png" IsVisible="{Binding bonusdaysaddimgvisible}" HeightRequest="14" WidthRequest="14" VerticalOptions="Center" HorizontalOptions="Start" Margin="0,0,5,0" />
                                            </StackLayout>



                                            <Label Text="View sample " FontSize="14"  Style="{StaticResource FontRegular}"   HorizontalOptions="Start" VerticalOptions="Center" TextColor="#2e74f0" >
                                                <Label.GestureRecognizers>
                                                    <TapGestureRecognizer Command="{Binding bonusdaysviewinfocmd}"/>
                                                </Label.GestureRecognizers>
                                            </Label>

                                        </StackLayout>

                                        <StackLayout  VerticalOptions="Start" HorizontalOptions="End" Margin="10,0,0,0" WidthRequest="100" >

                                            <StackLayout Orientation="Horizontal" VerticalOptions="Start" HorizontalOptions="FillAndExpand">
                                                <Label  Text="$" FontSize="16" Style="{StaticResource FontRegular}"  HorizontalOptions="Start" VerticalOptions="Center" TextColor="#08a182"   />
                                                <Label Text="{Binding perdaycostamounttxt}" FontSize="16"  Style="{StaticResource FontRegular}"  HorizontalOptions="Start" VerticalOptions="Center" TextColor="#08a182"  Margin="-5,0,0,0" />

                                            </StackLayout>
                                            <Label Text="Select Days" FontSize="11" Style="{StaticResource FontRegular}"   HorizontalOptions="FillAndExpand" VerticalOptions="Center" TextColor="#888888"   />
                                            <Frame CornerRadius="4" BackgroundColor="White" Padding="0" WidthRequest="80" >

                                                <StackLayout Orientation="Horizontal"  VerticalOptions="Start" HorizontalOptions="FillAndExpand" Padding="5,8,5,8"  >
                                                    <Label x:Name="daycnt" Margin="10,0,0,0" Text="{Binding daycounttxt}" FontSize="14" Style="{StaticResource FontRegular}"   HorizontalOptions="FillAndExpand" VerticalOptions="Center" TextColor="#888888"   >
                                                        <Label.GestureRecognizers>
                                                            <TapGestureRecognizer Command="{Binding showdaycountlist}"/>
                                                        </Label.GestureRecognizers>
                                                    </Label>
                                                    <Image Source="downarrowGrey.png" HeightRequest="12" WidthRequest="12" VerticalOptions="Center" HorizontalOptions="End" Margin="0,0,5,0" />

                                                </StackLayout>

                                            </Frame>
                                            <Button x:Name="bonusdaybtn" Text="{Binding bonusdaybtntxt}" Command="{Binding bonusdayscmd }" FontSize="14"  Style="{StaticResource FontRegular}"  VerticalOptions="Start" HorizontalOptions="Start" BackgroundColor="#51a351" TextColor="White" />


                                            <!--<Frame CornerRadius="4" BackgroundColor="White" Padding="0" WidthRequest="60" VerticalOptions="Start" HorizontalOptions="FillAndExpand" >

                                                <StackLayout Orientation="Horizontal"  VerticalOptions="Start" HorizontalOptions="FillAndExpand" Padding="5,8,5,8"  >
                                                    <Label  Margin="10,0,0,0" Text="20" FontSize="14" Style="{StaticResource FontRegular}"   HorizontalOptions="FillAndExpand" VerticalOptions="Center" TextColor="#888888"   >
                                                        
                                                    </Label>
                                                    <Image Source="downarrowGrey.png" HeightRequest="12" WidthRequest="12" VerticalOptions="Center" HorizontalOptions="End" Margin="0,0,5,0" />

                                                </StackLayout>

                                            </Frame>-->

                                        </StackLayout>
                                    </StackLayout>

                                </StackLayout>

                            </Frame>
                        </StackLayout>

                    </StackLayout>

                </ScrollView>

            </StackLayout>
            <!--IsVisible="{Binding totalamntvisible}"-->
