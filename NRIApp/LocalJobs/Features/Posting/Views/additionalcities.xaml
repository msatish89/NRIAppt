                                            </StackLayout>
                                            <Button x:Name="topbannerbtn" Text="{Binding topbannerbtntxt}" Command="{Binding topbannercmd}" FontSize="14" Style="{StaticResource FontRegular}"  VerticalOptions="Start" HorizontalOptions="Start" BackgroundColor="#51a351" TextColor="White" >
