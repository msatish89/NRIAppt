                                                            <SUL:CustomEntry.Behaviors>
                                                                <SULB:NumericInputValidator />
                                                                <SULB:MaxLengthValidator MaxLength="3" />
                                                            </SUL:CustomEntry.Behaviors>
                                                        </SUL:CustomEntry>
                                                    </StackLayout>
