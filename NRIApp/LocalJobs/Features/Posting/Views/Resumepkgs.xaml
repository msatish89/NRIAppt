                                            </StackLayout>

                                            <StackLayout VerticalOptions="FillAndExpand" HorizontalOptions="FillAndExpand" Margin="0,-5,0,0" Spacing="0" Padding="0,15,0,0" >
                                                <Label Text="{Binding custompkgamnt}" TextColor="#08a182"   FontSize="20" Style="{StaticResource FontBold}"  VerticalOptions="Center" HorizontalOptions="CenterAndExpand" HorizontalTextAlignment="Center"  />
