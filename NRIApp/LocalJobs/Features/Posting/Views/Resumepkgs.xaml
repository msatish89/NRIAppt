                                                    <StackLayout  VerticalOptions="CenterAndExpand" HorizontalOptions="FillAndExpand"  Margin="0" Padding="5,0,5,0" >
                                                        <SUL:CustomEntry x:Name="resumecnt" Text="{Binding Custompkgresumecnt}" Keyboard="Numeric"  VerticalOptions="CenterAndExpand"   HideBorder="True" HorizontalOptions="FillAndExpand" Style="{StaticResource FontRegular}" FontSize="13" Placeholder="Enter no. of Resume" ReturnKeyType="Done" PlaceholderColor="#c0c0c0" >
