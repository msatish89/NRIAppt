                                                    BorderRadius="4"
                                                    VerticalOptions="Center"
                                                    HorizontalOptions="Center"                                                   
                                                    FontSize="14" IsVisible="{Binding Selcustombtn}" WidthRequest="100"  Command="{Binding TapCustomPackage}"
